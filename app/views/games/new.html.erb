<h1>New Game</h1>

<div class="container" >
  <ul>
    <% @letters.each do |letter| %>
    <li class="btn btn-primary text-center"><%= letter.capitalize %></li>
    <% end %>
  </ul>
  <form action="/score" method="post" class="form-inline justify-content-center">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word" placeholder="What is the longest word you can find ?">
    <input class="btn btn-primary" type="submit" value="Play">
    <input type="hidden" name="start_time" value="<%= @start_time %>">
    <input type="hidden" name="letters" value="<%= @letters.join%>">
  </form>
</div>

